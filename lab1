int main()
{
 float x=1.5;
 float RecurseSum(int length, float prevF, float sum, int i) {
float tempF = prevF;
if (length > i) {
i++;
prevF = -(prevF)*(x-1)*i/(i+1);
sum = RecurseSum(length, prevF, sum, i);
}
sum += tempF;
return sum;
}
float F = x-1;
