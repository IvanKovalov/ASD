int main()
{
 float x =1.1;
 float i = 1;
 float m = 2;
 float rytm(float n){
 float spysk(float num, float p ){
 float r = -1;
 if(num == 0){
 r = p;
 }
 else if(num == n){
 i = (x-1);
 p = p+i;
 r = spysk(num-1, p); }
 else{
 i = (-1)*i*m/(m+1)*(x-1);
 p = p+i;
 m++;
 r = spysk(num-1, p);
 }
 return r;
 }
 return spysk(n, 0);
 }
 float result = rytm(5);
 printf("%f", result);
 return 0;
}




